{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "lib": [
      "ES2022"
    ],
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
  },
  "include": [
    "src","src/types"
  ],
  
  "exclude": [
    "node_modules",
    "dist",
    "generated"
  ],

  "ts-node": {
    "esm": true,
  },
  
}


